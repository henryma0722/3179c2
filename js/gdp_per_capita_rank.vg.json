{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "year",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "title": {
    "text": {
      "expr": "'ASEAN GDP per Capita Ranking (' + year + ')'"
    }
  },
  "width": 1190,
  "data": {
    "url": "https://raw.githubusercontent.com/henryma0722/3179c2/main/data/merged_economic_data.csv"
  },
  "transform": [
    {
      "filter": "datum['Country Name'] == 'Malaysia' || datum['Country Name'] == 'Thailand' || datum['Country Name'] == 'Singapore' || datum['Country Name'] == 'Indonesia' || datum['Country Name'] == 'Philippines' || datum['Country Name'] == 'Myanmar' || datum['Country Name'] == 'Cambodia' || datum['Country Name'] == 'Laos' || datum['Country Name'] == 'Brunei Darussalam'"
    },
    {
      "calculate": "'GDP_' + year",
      "as": "gdp_field"
    },
    {
      "calculate": "'POP_' + year",
      "as": "pop_field"
    },
    {
      "calculate": "datum[datum.gdp_field]",
      "as": "current_gdp"
    },
    {
      "calculate": "datum[datum.pop_field]",
      "as": "current_pop"
    },
    {
      "calculate": "datum.current_gdp / datum.current_pop",
      "as": "GDP_per_capita"
    },
    {
      "filter": "datum.GDP_per_capita > 0"
    }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Country Name",
      "type": "nominal",
      "title": "Country",
      "sort": "-x"
    },
    "x": {
      "field": "GDP_per_capita",
      "type": "quantitative",
      "title": "GDP per Capita (US$)",
      "scale": {
        "domain": [
          0,
          100000
        ]
      },
      "axis": {
        "format": "$,.0f",
        "values": [
          0,
          10000,
          20000,
          30000,
          40000,
          50000,
          60000,
          70000,
          80000,
          90000,
          100000
        ]
      }
    },
    "color": {
      "field": "GDP_per_capita",
      "type": "quantitative",
      "title": "GDP per Capita",
      "scale": {
        "scheme": "viridis"
      }
    },
    "tooltip": [
      {
        "field": "Country Name",
        "type": "nominal"
      },
      {
        "field": "GDP_per_capita",
        "type": "quantitative",
        "title": "GDP per Capita",
        "format": "$,.2f"
      },
      {
        "field": "current_gdp",
        "type": "quantitative",
        "title": "Total GDP",
        "format": "$,.0f"
      },
      {
        "field": "current_pop",
        "type": "quantitative",
        "title": "Population",
        "format": ",.0f"
      }
    ]
  },
  "config": {}
}


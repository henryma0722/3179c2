{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "year",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "vconcat": [
    {
      "title": {"text": "Global GDP per Capita"},
      "width": 800,
      "height": 500,
      "data": {
        "url": "https://raw.githubusercontent.com/henryma0722/3179/main/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "transform": [
            {"calculate": "'Economic data not available for ' + datum.properties.NAME", "as": "note"}
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {
            "tooltip": {"field": "note"}
          }
        },
        {
          "transform": [
            {
              "lookup": "properties.ISO_A3",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/henryma0722/3179c2/main/data/merged_economic_data.csv"
                },
                "key": "Country Code",
                "fields": ["Country Name", "Continent"]
              }
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {
            "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "Country"},
              {"field": "Country Name", "type": "nominal", "title": "Country Name"},
              {"field": "Continent", "type": "nominal", "title": "Continent"}
            ]
          }
        },
        {
          "transform": [
            {
              "lookup": "properties.ISO_A3",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/henryma0722/3179c2/main/data/merged_economic_data.csv",
                  "format": {"type": "csv"}
                },
                "key": "Country Code"
              },
              "as": "economic_data"
            },
            {
              "calculate": "datum.economic_data ? 'GDP_' + year : ''",
              "as": "gdp_field"
            },
            {
              "calculate": "datum.economic_data ? 'POP_' + year : ''", 
              "as": "pop_field"
            },
            {
              "calculate": "datum.economic_data && datum.gdp_field ? datum.economic_data[datum.gdp_field] : null",
              "as": "current_gdp"
            },
            {
              "calculate": "datum.economic_data && datum.pop_field ? datum.economic_data[datum.pop_field] : null",
              "as": "current_pop"
            },
            {
              "calculate": "datum.current_gdp && datum.current_pop && datum.current_pop > 0 ? datum.current_gdp / datum.current_pop : null",
              "as": "current_gdp_per_capita"
            },
            {
              "filter": "datum.current_gdp_per_capita != null"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "color": {
              "field": "current_gdp_per_capita",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [500, 1000, 5000, 10000, 30000],
                "range": ["#fee5d9", "#fdbe85", "#fd8d3c", "#e6550d", "#a63603", "#662506"]
              },
              "title": "GDP per Capita (US$)"
            },
            "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "Country"},
              {"field": "economic_data.Continent", "type": "nominal", "title": "Continent"},
              {"field": "current_gdp", "type": "quantitative", "title": "GDP", "format": "$,.0f"},
              {"field": "current_pop", "type": "quantitative", "title": "Population", "format": ",.0f"},
              {"field": "current_gdp_per_capita", "type": "quantitative", "title": "GDP per Capita", "format": "$,.2f"},
              {"field": "year", "type": "quantitative", "title": "Year"}
            ]
          }
        }
      ]
    }
  ],
  "config": {}
}